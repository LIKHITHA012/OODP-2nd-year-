#include<iostream.h>
#include<stdio.h>
#include<conio.h>
class Check
{
public:

//swap function with int type arguments
void swap(int x,int y)
{
cout<<"\nBefore swapping integer values\nValue 1 = "<<x<<"\nValue 2 = "<<y;
int temp;
temp=x;
x=y;
y=temp;
cout<<"\nAfter swapping integer values\nValue 1 = "<<x<<"\nValue 2 = "<<y;
}

//swap function with double type arguments
void swap(double x,double y)
{
cout<<"\nBefore swapping float values\nValue 1 = "<<x<<"\nValue 2 = "<<y;
double temp;
temp=x;
x=y;
y=temp;
cout<<"\nAfter swapping float values\nValue 1 = "<<x<<"\nValue 2 = "<<y;
}

//swap function with char type arguments
void swap(char x,char y)
{
cout<<"\nBefore swapping character values\nValue 1 = "<<x<<"\nValue 2 = "<<y;
char temp;
temp=x;
x=y;
y=temp;
cout<<"\nAfter swapping character values\nValue 1 = "<<x<<"\nValue 2 = "<<y;
}

};

void main ()
{
clrscr();
Check ch;

//calling int type arguments swap function
ch.swap(10,20);

//calling double type arguments swap function
ch.swap(10.5,20.5);

//calling char type arguments swap function
ch.swap('A','B');
getch();
}     
